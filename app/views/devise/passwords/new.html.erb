<div class="w-full px-4 py-6 mx-auto mt-8 mb-6 bg-white rounded-none shadow-xl sm:rounded-lg sm:w-10/12 md:w-8/12 lg:w-6/12 xl:w-4/12 sm:px-6">
  <h1 class="mb-8 text-2xl font-semibold text-left text-secondary-900">Forgot your password ?</h1>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, html: { class: "mb-8 space-y-4" }) do |f| %>
    <div class="mx-auto">
      <div class="flex gap-1.5 flex-col">
        <div class="flex justify-between items-center">
          <%= f.label :email, class: "form-label after:ml-0.5 after:text-red-500 after:content-['*']" %>
          <%- if resource.errors.any? %>
            <p class="mt-1 text-sm text-red-500 flex items-center gap-1">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="h-5 w-5 flex-shrink-0">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
              </svg>
              <%= resource.errors.full_messages.to_sentence %>
            </p>
          <% end %>
        </div>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "example.gos@gmail.com", inputmode: "email", required: true, class: "form-input #{
          'border-red-500 shadow-sm focus:border-red-500 focus:ring focus:ring-red-200 focus:ring-opacity-80' if resource.errors.any?
        }" %>
      </div>
    </div>
    <%= f.submit "Continue", class: "btn-submit" %>
  <% end %>
</div>
<p class="mb-4 text-sm text-center text-secondary-100 font-medium">
  Already has account? <%= link_to "Login", session_path(resource_name), class: "text-purple-200 underline hover:text-white" %>
</p>
