<section class="bg-sky-700/90 min-h-screen"> 
  <div class="px-0 py-10 mx-auto max-w-7xl sm:px-4 flex flex-col gap-1">
    <img class="mx-auto lg:mx-0" width=200 src='https://comana.goldenowl.asia/packs/media/images/logo-light-1288fac6be620e9551c1d0eb40436ca7.svg' alt='golden_owl_logo' />
    <span class="text-white font-semibold text-lg capitalize mx-auto lg:mx-0">Meeting room system</span>
  </div>
  <div class="px-0 pb-10 mx-auto max-w-8xl sm:px-4">
    <div class="w-full px-4 py-6 mx-auto mt-8 mb-6 bg-white rounded-none shadow-xl sm:rounded-lg sm:w-10/12 md:w-8/12 lg:w-6/12 xl:w-4/12 sm:px-6">
      <h1 class="mb-8 text-2xl font-semibold text-left text-gray-900">Sign In</h1>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mb-8 space-y-4" }) do |f| %>
        <div class="mx-auto">
          <div class="flex gap-1.5 flex-col">
            <%# <label for="example1" class="">Email</label> %>
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "example.gos@gmail.com", inputmode: "email", required: true, class: "form-input" %>
          </div>
        </div>
        <div class="mx-auto">
          <div class="flex gap-1.5 flex-col">
            <%= f.label :password, class: "form-label" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-input", placeholder: "••••••••" %>
          </div>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="space-y-3">
            <div class="flex space-x-2">
              <div class="flex h-5 items-center">
                <%# <input type="checkbox" id="example7" name="checkGroup1" class="" /> %>
                <%= f.check_box :remember_me, class: "form-remember" %>
              </div>
              <%= f.label :remember_me, class: "text-gray-700 text-sm cursor-pointer" %>
            </div>
          </div>
        <% end %>
        <%= f.submit "Sign In", class: "btn-submit" %>
      <% end %>
      <div class="space-y-6">
        <div class="text-center border-b border-gray-200" style="line-height: 0px">
          <span class="p-2 text-xs font-semibold tracking-wide text-gray-600 uppercase bg-white" style="line-height: 0px">Or</span>
        </div>
        <div>
          <%- if devise_mapping.omniauthable? %>
            <%- resource_class.omniauth_providers.each do |provider| %>
              <%= button_to omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "btn-social-login" do %>
                <div class="flex items-center gap-1 justify-center">
                  <%= image_tag "google_icon.svg", alt: "google_icon", width: 38 %>
                  <span>Sign in with Google</span>
                </div>
              <% end %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <p class="mb-4 text-sm text-center text-gray-100 font-medium">
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-purple-200 underline hover:text-white" %>
    </p>
  </div>
</section>
